<%= provide(:title, "Schedule #{@event.title}") %>
<%= provide(:h1, @event.title) %>
<%= provide(:h2, @team ? "##{@team_standing.pos} #{@team.title} (#{@team_standing.won}-#{@team_standing.lost}-#{@team_standing.drawn})" : nil) %>
<%= provide(:h3, "Full Season") %>

<div class="left">
<h3>Schedule</h3>
<%= render 'schedule_table' %>
<%= paginate @schedule, :window => 2 %>
</div>

<% if not @team %>
<div class="right">
<h3>Standings</h3>
<%= render 'standings_table' %>
</div>

<div class="right">
  <h3>Top Players (<%= link_to "All Players", roster_path(team_key: @tkey, event_key: @event.key) %>)</h3>
  <%= render 'players_table' %>
</div>
<% end %>
